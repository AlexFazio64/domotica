<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="400.0"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.orion.domotica.LoginController">
	<center>
		<VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0"
		      BorderPane.alignment="CENTER">
			<BorderPane.margin>
				<Insets left="15.0" right="15.0"/>
			</BorderPane.margin>
			<TextField promptText="username" fx:id="userTxt" />
			<PasswordField promptText="password" fx:id="passTxt" />
			<HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
				<Button fx:id="logBtn" mnemonicParsing="false" text="Login" onAction="#login" />
				<Button fx:id="regBtn" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Register" onAction="#register"/>
			</HBox>
		</VBox>
	</center>
</BorderPane>